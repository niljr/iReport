mixin commentForm(comment)
	form(action=`/comments/${comment._id}` method="POST")
		textarea(name="text" placeholder="Do you want something to say to this comment? Leave a comment...")
		.reviewer__meta
			.reviewer__stars
				each num in [5,4,3,2,1]
					input(type="radio" required id=`star${num}` name="rating" value=num)
					label(for=`star${num}`) #{num} Stars 
			input.button(type="submit" value="Submit Comment ->") 